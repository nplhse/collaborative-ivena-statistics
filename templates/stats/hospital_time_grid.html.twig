{% extends '_layout_vertical.html.twig' %}

{% block title %}Dashboard - {{ scope_label(scope) }} - {{ parent() }}{% endblock %}

{% block page_body %}
    <div class="container-xl">
        <twig:Breadcrumbs :items="[
    { label: 'link.statistics', path: path('app_data_index') },
    { label: 'link.statistics.hospital.time_grid' }
  ]" />

        <div class="d-flex align-items-center mb-3">
            <h2 class="page-title me-auto">{{ scope_label(scope) }}</h2>
            <twig:GranularitySwitch
                :scope="scope"
                variant="dropdown"
                :showPeriod="true"
                :allowedOptions="['year', 'quarter', 'month', 'week']" />
        </div>

        <twig:HospitalTimeGrid :columns="columns" :rows="rows" />

        <twig:TimeScopePager :scope="scope" variant="full" />
    </div>
{% endblock %}
