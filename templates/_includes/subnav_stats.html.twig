            <div class="container-xl">
                <ul class="navbar-nav">
                    <li class="nav-item {{ route starts with 'app_stats_dashboard' ? 'active' : '' }}">
                        <a class="nav-link" href="{{ path('app_stats_dashboard') }}">
                            <span class="nav-link-title">
                                {{ 'link.stats.dashboard'|trans }}
                            </span>
                        </a>
                    </li>
                    <li class="nav-item {{ route starts with 'app_stats_timegrid' ? 'active' : '' }}">
                        <a class="nav-link" href="{{ path('app_stats_timegrid') }}">
