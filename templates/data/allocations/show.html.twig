{% extends '_layout_vertical.html.twig' %}

{% block title %}{{ 'title.allocation.show'|trans }}: {{ allocation.id }} - {{ 'title.data'|trans }} - {{ parent() }}{% endblock %}

{% import '_macros/badges.html.twig' as badges %}

{% block header %}
    {% embed '_embeds/header.html.twig' %}
        {% block header_after %}
            {{ include('_includes/subnav_data.html.twig') }}
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block page_header %}
        <div class="container-xl">
            <twig:Breadcrumbs
                :items="[
                    { label: 'link.data', path: path('app_data_index') },
                    { label: 'link.allocations', path: path('app_data_allocation_list') },
                    { label: 'title.allocation.show' },
                ]"
            />

            <div class="row align-items-center">
                <div class="col-auto">
                    <span class="avatar avatar-lg rounded">
                        <twig:ux:icon name="tabler:ambulance" class="w-5 h-5" />
                    </span>
                </div>
                <div class="col">
                    <h1 id="allocation-id" class="fw-bold">{{ 'label.allocation'|trans }} #{{ allocation.id }}</h1>
                    <div class="list-inline list-inline-dots text-muted">
                        <div class="list-inline-item">
                            <twig:ux:icon name="tabler:map" class="w-3 h-3" />
                            {{ allocation.dispatchArea }}, {{ allocation.state }}
                        </div>
                    </div>
                </div>
                <div class="col-auto ms-auto">
                    <div class="btn-list">
                        <span class="d-none d-sm-inline">
                            <a class="btn btn-outline-secondary" href="{{ path('app_data_allocation_list') }}">
                                <twig:ux:icon name="tabler:chevron-left" class="w-3 h-3" />
                                {{ 'label.back_to_list'|trans }}
                            </a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}

{% block page_content %}
    <div class="row g-3">
        <div class="col">
            <div class="col-12 mb-3">
                <twig:Card
                    title="{{ 'label.hospital'|trans }}"
                >
                    {% import '_macros/badges.html.twig' as badges %}

                    <h3 class="card-title mb-1 fs-3">
                        {{ allocation.hospital.name }}
                    </h3>

                    <div class="text-muted small mb-3 d-flex align-items-center gap-2">
                        <twig:ux:icon name="tabler:building" class="w-3 h-3" />
                        <span>
                                    {{ allocation.hospital.dispatchArea }} · {{ allocation.hospital.state }}
                                </span>
                    </div>

                    <div class="text-secondary small mb-3 d-flex align-items-center gap-2">
                        <twig:ux:icon name="tabler:map-pin" class="w-3 h-3" />
                        {{ allocation.hospital.address.street }}, {{ allocation.hospital.address.postalCode }} {{ allocation.hospital.address.city }}
                        · {{ allocation.hospital.address.country }}
                    </div>

                    {% set props = [
                        {
                            icon: 'tabler:aspect-ratio',
                            label: 'label.hospital_size'|trans,
                            content: badges.render('hospital_size', allocation.hospital.size.value),
                        },
                        {
                            icon: 'tabler:bed',
                            label: 'label.hospital_beds'|trans,
                            content: '<strong>' ~ (allocation.hospital.beds ?? '—') ~ '</strong>',
                        },
                        {
                            icon: 'tabler:map-pin',
                            label: 'label.hospital_location'|trans,
                            content: badges.render('hospital_location', allocation.hospital.location.value),
                        },
                        {
                            icon: 'tabler:hierarchy-2',
                            label: 'label.hospital_tier'|trans,
                            content: badges.render('hospital_tier', allocation.hospital.tier.value),
                        },
                    ] %}

                    <div class="d-flex flex-wrap gap-2 mt-2">
                        {% for p in props %}
                            <span class="badge rounded-pill text-bg-light border d-inline-flex align-items-center gap-2 py-2 px-3" title="{{ p.label }}">
                                            <twig:ux:icon name="{{ p.icon }}" class="w-3 h-3" />
                                            <span class="text-muted">{{ p.label }}</span>
                                            <span class="ms-1">
                                                {% autoescape false %}{{ p.content }}{% endautoescape %}
                                            </span>
                                        </span>
                        {% endfor %}
                    </div>
                </twig:Card>

            </div>
            <div class="col-12">
                <twig:Card
                    title="{{ 'label.properties'|trans }}"
                >
                    <div class="datagrid">
                        <div class="datagrid-item">
                            <div class="datagrid-title">{{ 'field.requiresResus'|trans }}</div>
                            <div class="datagrid-content">
                                {% if allocation.requiresResus %}
                                    <span class="status status-green">{{ 'field.true'|trans }}</span>
                                {% else %}
                                    <span class="status status-red">{{ 'field.false'|trans }}</span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="datagrid-item">
                            <div class="datagrid-title">{{ 'field.requiresCathlab'|trans }}</div>
                            <div class="datagrid-content">
                                {% if allocation.requiresCathlab %}
                                    <span class="status status-green">{{ 'field.true'|trans }}</span>
                                {% else %}
                                    <span class="status status-red">{{ 'field.false'|trans }}</span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="datagrid-item">
                            <div class="datagrid-title">{{ 'field.isCPR'|trans }}</div>
                            <div class="datagrid-content">
                                {% if allocation.isCPR %}
                                    <span class="status status-green">{{ 'field.true'|trans }}</span>
                                {% else %}
                                    <span class="status status-red">{{ 'field.false'|trans }}</span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="datagrid-item">
                            <div class="datagrid-title">{{ 'allocations.field.isVentilated'|trans }}</div>
                            <div class="datagrid-content">
                                {% if allocation.isVentilated %}
                                    <span class="status status-green">{{ 'field.true'|trans }}</span>
                                {% else %}
                                    <span class="status status-red">{{ 'field.false'|trans }}</span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="datagrid-item">
                            <div class="datagrid-title">{{ 'allocations.field.isShock'|trans }}r</div>
                            <div class="datagrid-content">
                                {% if allocation.isShock %}
                                    <span class="status status-green">{{ 'field.true'|trans }}</span>
                                {% else %}
                                    <span class="status status-red">{{ 'field.false'|trans }}</span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="datagrid-item">
                            <div class="datagrid-title">{{ 'allocations.field.isPregnant'|trans }}</div>
                            <div class="datagrid-content">
                                {% if allocation.isPregnant %}
                                    <span class="status status-green">{{ 'field.true'|trans }}</span>
                                {% else %}
                                    <span class="status status-red">{{ 'field.false'|trans }}</span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </twig:Card>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="row row-cards">
                <div class="col-12">
                    <twig:Card
                        title="{{ 'label.basic_info'|trans }}"
                    >
                        <div id="allocation-created-at" class="mb-2">
                            <twig:ux:icon name="tabler:clock-play" class="w-3 h-3" />
                            {{ 'label.created_at'|trans }} <strong>{{ allocation.createdAt|date('d.m.Y H:i') }}</strong>
                        </div>
                        <div id="allocation-arrival-at" class="mb-2">
                            <twig:ux:icon name="tabler:clock-check" class="w-3 h-3" />
                            {{ 'label.arrival_at'|trans }} <strong>{{ allocation.arrivalAt|date('d.m.Y H:i') }}</strong>
                        </div>
                        <div id="allocation-age" class="mb-2">
                            <twig:ux:icon name="tabler:user" class="w-3 h-3" />
                            {{ 'field.age'|trans }} <strong>{{ allocation.age }}</strong>
                        </div>
                        <div id="allocation-gender">
                            {% if allocation.gender.value == 'M' %}
                                <twig:ux:icon name="tabler:gender-male" class="w-3 h-3" />
                            {% elseif allocation.gender.value == 'F' %}
                                <twig:ux:icon name="tabler:gender-female" class="w-3 h-3" />
                            {% else %}
                                <twig:ux:icon name="tabler:gender-agender" class="w-3 h-3" />
                            {% endif %}
                            {{ 'field.gender'|trans }} <strong>{{ allocation.gender.label|trans }}</strong>
                        </div>
                    </twig:Card>
                </div>
                <div class="col-12">
                    <twig:Card
                        title="{{ 'label.transport'|trans }}"
                    >
                        <div class="datagrid">
                            <div class="datagrid-item">
                                <div class="datagrid-title">{{ 'field.transportType'|trans }}</div>
                                <div class="datagrid-content">
                                    {% if allocation.transportType.value == 'G' %}
                                        <twig:ux:icon name="tabler:ambulance" class="w-3 h-3" />
                                        <strong>{{ allocation.transportType.label()|trans }}</strong>
                                    {% elseif allocation.transportType.value == 'A' %}
                                        <twig:ux:icon name="tabler:helicopter" class="w-3 h-3" />
                                        <strong>{{ allocation.transportType.label()|trans }}</strong>
                                    {% else %}
                                        {{ 'field.transportType.unknown'|trans }}
                                    {% endif %}
                                </div>
                            </div>
                            <div class="datagrid-item">
                                <div class="datagrid-title">{{ 'field.isWithPhysician'|trans }}</div>
                                <div class="datagrid-content">
                                    {% if allocation.isWithPhysician %}
                                        <strong>{{ 'field.isWithPhysician.true'|trans }}</strong>
                                    {% else %}
                                        {{ 'field.isWithPhysician.false'|trans }}
                                    {% endif %}</div>
                            </div>
                        </div>
                    </twig:Card>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
