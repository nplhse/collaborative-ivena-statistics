{% extends '@Shared/_layout_vertical.html.twig' %}

{% block title %}{{ 'title.allocation.list'|trans }} - {{ parent() }}{% endblock %}

{% block turbo_drive %}data-turbo=true{% endblock %}

{% block header %}
    {% embed '@Shared/_embeds/header.html.twig' %}
        {% block header_after %}
            {{ include(('@Shared/_includes/subnav_data.html.twig')) }}
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block page_header %}
    <div class="container-xl">
        <twig:Breadcrumbs
            :items="[
                    { label: 'link.data', path: path('app_data_index') },
                    { label: 'title.allocation.list' }
                ]"
        />

        <div class="page-header d-print-none">
            <div class="row align-items-center">
                <div class="col">
                    {% block page_intro %}
                        <h2 class="page-title">
                            {% block page_title %}{{ 'title.allocation.list'|trans }}{% endblock %}
                        </h2>
                        {% block page_subtitle %}
                            {% block result_count %}
                                <div id="result-count" class="text-body-secondary mt-1">
                                    {{ 'label.pagination_numbers'|trans({first: paginator.firstResultNumber, last: paginator.lastResultNumber, total: paginator.numResults}) }}
                                </div>
                            {% endblock %}
                        {% endblock %}
                    {% endblock %}
                </div>
                <!-- Page title actions -->
                <div class="col-auto ms-auto d-print-none">
                    <div class="btn-list">
                        <div class="btn-group">
                            <button
                                class="btn"
                                type="button"
                                data-bs-toggle="offcanvas"
                                data-bs-target="#allocation-filters"
                                aria-controls="allocation-filters"
                            >
                                {% if activeFilterCount < 1 %}
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="icon"
                                        width="24"
                                        height="24"
                                        viewBox="0 0 24 24"
                                        stroke-width="2"
                                        stroke="currentColor"
                                        fill="none"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                    >
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                        <path d="M4 4h16l-6 8v6l-4 -2v-4z" />
                                    </svg>
                                {% else %}
                                    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24">
                                        <path fill="currentColor" d="M20 3H4a1 1 0 0 0-1 1v2.227l.008.223a3 3 0 0 0 .772 1.795L8 12.886V21a1 1 0 0 0 1.316.949l6-2l.108-.043A1 1 0 0 0 16 19v-6.586l4.121-4.12A3 3 0 0 0 21 6.171V4a1 1 0 0 0-1-1"/>
                                    </svg>
                                {% endif %}
                                <span class="ms-2">{{ 'label.filters'|trans }}</span>

                                {% if activeFilterCount > 0 %}
                                    <span class="badge text-primary ms-2">
                                        {{ activeFilterCount }}
                                    </span>
                                {% endif %}
                            </button>

                            {% if activeFilterCount > 0 %}
                                <a
                                    href="{{ path('app_data_allocation_list') }}"
                                    class="btn btn-icon btn-outline"
                                    title="Filter zurücksetzen"
                                    aria-label="Filter zurücksetzen"
                                >
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="icon"
                                        width="24"
                                        height="24"
                                        viewBox="0 0 24 24"
                                        stroke-width="2"
                                        stroke="currentColor"
                                        fill="none"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                    >
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                        <path d="M18 6l-12 12" />
                                        <path d="M6 6l12 12" />
                                    </svg>
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block page_content %}
    <turbo-frame id="allocation-list" data-turbo-action="advance">
        {% import '@Shared/_macros/filters.html.twig' as activeFilters %}

        {% if activeFilterCount > 0 %}
            <div class="alert alert-info" role="alert">
                <strong class="text-info">{{ 'label.filters.active'|trans }}:</strong>
                {{ activeFilters.allocation_filter_badges(filters, states, dispatchAreas, indications) }}
            </div>
        {% endif %}

        <twig:DataTable
            :paginator="paginator"
            :paginationRoute="pagination_route"
        >
            {% import '@Shared/_macros/pagination.html.twig' as pagination %}

            <table class="table data-table-card">
                <thead>
                <tr>
                    <th class="col-2">
                        <a class="text-muted" href="{{ path('app_data_allocation_list', {
                            ...app.request.query.all(),
                            sortBy: 'arrivalAt',
                            orderBy: sortBy == 'arrivalAt' and orderBy == 'asc' ? 'desc' : 'asc',
                        }) }}">
                            {{ 'label.timestamps'|trans }} {{ pagination.sortArrow('arrivalAt', sortBy, orderBy) }}
                        </a>
                    </th>
                    <th class="col-1">
                        <a class="text-muted" href="{{ path('app_data_allocation_list', {
                            ...app.request.query.all(),
                            sortBy: 'age',
                            orderBy: sortBy == 'age' and orderBy == 'asc' ? 'desc' : 'asc',
                        }) }}">
                            {{ 'label.age'|trans }} {{ pagination.sortArrow('age', sortBy, orderBy) }}
                        </a>
                    </th>
                    <th class="col-3">
                        {{ 'label.hospital'|trans }}
                    </th>
                    <th class="col-3">
                        {{ 'label.indication'|trans }}
                    </th>
                    <th class="col-1">
                        {{ 'label.urgency'|trans }}
                    </th>
                    <th class="col-1">
                        {{ 'label.properties'|trans }}
                    </th>
                    <th class="col-1">
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for allocation in paginator.results %}
                    <tr>
                        <td>
                            <twig:ux:icon name="tabler:clock-play" class="w-3 h-3" /> {{ allocation.createdAt|date('d.m.Y H:i') }}<br/>
                            <twig:ux:icon name="tabler:clock-check" class="w-3 h-3" /> {{ allocation.arrivalAt|date('d.m.Y H:i') }}
                        </td>
                        <td>
                            {% if allocation.gender.value == 'M' %}
                                <twig:ux:icon name="tabler:gender-male" class="w-3 h-3" />
                            {% elseif allocation.gender.value == 'F' %}
                                <twig:ux:icon name="tabler:gender-female" class="w-3 h-3" />
                            {% else %}
                                <twig:ux:icon name="tabler:gender-agender" class="w-3 h-3" />
                            {% endif %}
                            {{ allocation.age }}
                        </td>
                        <td>
                            <a href="{{ path('app_data_hospital_show', {id: allocation.hospital_id}) }}" target="_top">{{ allocation.hospital }}</a><br />
                            {{ allocation.dispatchArea }} - {{ allocation.state }}
                        </td>
                        <td>
                            {% if allocation.indicationNormalizedName is not null %}
                                <span class="badge">{{ allocation.indicationNormalizedCode }}</span> <strong>{{ allocation.indicationNormalizedName }}</strong>
                            {% else %}
                                <span class="badge">{{ allocation.indicationRawCode }}</span> {{ allocation.indicationRawName }}
                            {% endif %}
                        </td>
                        <td>
                            {% import '@Shared/_macros/badges.html.twig' as badges %}

                            {{ badges.render('allocation_urgency', allocation.urgency.value) }}
                        </td>
                        <td>
                            <span class="text-danger fw-bold">
                                {% if allocation.infection is not null %}
                                    <span class="badge bg-orange text-orange-fg">{{ allocation.infection }}</span>
                                {% endif %}
                                {% if allocation.requiresResus %}
                                    {{ 'S+'|trans }}
                                {% endif %}
                                {% if allocation.requiresCathlab %}
                                    {{ 'H+'|trans }}
                                {% endif %}
                                {% if allocation.isCPR %}
                                    {{ 'R+'|trans }}
                                {% endif %}
                                {% if allocation.isVentilated %}
                                    {{ 'B+'|trans }}
                                {% endif %}
                                {% if allocation.isWithPhysician %}
                                    {{ 'N+'|trans }}
                                {% endif %}
                                {% if allocation.isPregnant %}
                                    {{ 'label.pregnant'|trans }}
                                {% endif %}
                            </span>
                        </td>
                        <td>
                            <div class="btn-actions">
                                <a href="{{ path('app_data_allocation_show', {id: allocation.id}) }}" class="btn btn-action" target="_top">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24">
                                        <g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
                                            <path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0-4 0"/>
                                            <path d="M21 12q-3.6 6-9 6t-9-6q3.6-6 9-6t9 6"/>
                                        </g>
                                    </svg>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">
                            <div class="empty">
                                <div class="empty-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                        <circle cx="12" cy="12" r="9" />
                                        <line x1="9" y1="10" x2="9.01" y2="10" />
                                        <line x1="15" y1="10" x2="15.01" y2="10" />
                                        <path d="M9.5 15.25a3.5 3.5 0 0 1 5 0" />
                                    </svg>
                                </div>
                                <p class="empty-title">{{ 'label.search_no_results'|trans }}</p>
                                <p class="empty-subtitle text-secondary">
                                    {{ 'help.search_no_results'|trans }}
                                </p>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </twig:DataTable>

        <turbo-stream action="replace" target="result-count">
            <template>
                {{ block('result_count') }}
            </template>
        </turbo-stream>
    </turbo-frame>

    <div
        class="offcanvas offcanvas-end"
        tabindex="-1"
        id="allocation-filters"
        aria-labelledby="allocation-filters-label"
    >
        <div class="offcanvas-header">
            <h2 class="offcanvas-title" id="allocation-filters-label">
                {{ 'label.filter.results'|trans }}
            </h2>
            <button
                type="button"
                class="btn-close"
                data-bs-dismiss="offcanvas"
                aria-label="Close"
            ></button>
        </div>

        <div class="offcanvas-body">
            <form method="get" action="{{ path('app_data_allocation_list') }}">
                <div class="mb-3">
                    <label class="form-label">{{ 'label.tier'|trans }}</label>
                    <select name="tier" class="form-select">
                        <option value="">{{ 'label.all_tiers'|trans }}</option>
                        {% for tier in tiers %}
                            <option
                                value="{{ tier.value }}"
                                {{ filters.tier == tier.value ? 'selected' }}
                            >
                                {{ ('hospital.tier.' ~ tier.value)|trans }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">{{ 'label.location'|trans }}</label>
                    <select name="location" class="form-select">
                        <option value="">{{ 'label.all_locations'|trans }}</option>
                        {% for location in locations %}
                            <option
                                value="{{ location.value }}"
                                {{ filters.location == location.value ? 'selected' }}
                            >
                                {{ ('hospital.location.' ~ location.value)|trans }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">{{ 'label.size'|trans }}</label>
                    <select name="size" class="form-select">
                        <option value="">{{ 'label.all_sizes'|trans }}</option>
                        {% for size in sizes %}
                            <option
                                value="{{ size.value }}"
                                {{ filters.size == size.value ? 'selected' }}
                            >
                                {{ ('hospital.size.' ~ size.value)|trans }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">{{ 'label.urgency'|trans }}</label>
                    <select name="urgency" class="form-select">
                        <option value="">{{ 'label.all_urgencies'|trans }}</option>
                        {% for urgency in urgencies %}
                            <option
                                value="{{ urgency.value }}"
                                {{ filters.urgency == urgency.value ? 'selected' }}
                            >
                                {{ ('allocation.urgency.' ~ urgency.value)|trans }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">{{ 'label.indication.normalized'|trans }}</label>
                    <select name="indication" class="form-select">
                        <option value="">{{ 'label.all_indications'|trans }}</option>
                        {% for indication in indications %}
                            {% if indication.code > 0 %}
                            <option
                                value="{{ indication.code }}"
                                {{ filters.location == indication.code ? 'selected' }}
                            >
                                {{ indication.name }}
                            </option>
                        {% endif %}
                        {% endfor %}
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">{{ 'label.requires_resus'|trans }}</label>
                    <select name="requiresResus" class="form-select">
                        <option value="">{{ 'label.all_modes'|trans }}</option>
                        <option
                            value="1"
                            {{ filters.requiresResus == '1' ? 'selected' }}
                        >
                            {{ 'label.resus.is_required'|trans }}
                        </option>
                        <option
                            value="0"
                            {{ filters.requiresResus == '0' ? 'selected' }}
                        >
                            {{ 'label.resus.not_required'|trans }}
                        </option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">{{ 'label.requires_cathlab'|trans }}</label>
                    <select name="requiresCathlab" class="form-select">
                        <option value="">{{ 'label.all_modes'|trans }}</option>
                        <option
                            value="1"
                            {{ filters.requiresCathlab == '1' ? 'selected' }}
                        >
                            {{ 'label.cathlab.is_required'|trans }}
                        </option>
                        <option
                            value="0"
                            {{ filters.requiresCathlab == '0' ? 'selected' }}
                        >
                            {{ 'label.cathlab.not_required'|trans }}
                        </option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">{{ 'label.dispatch_area'|trans }}</label>
                    <select name="dispatchArea" class="form-select">
                        <option value="">{{ 'label.all_dispatch_areas'|trans }}</option>
                        {% for area in dispatchAreas %}
                            <option
                                value="{{ area.id }}"
                                {{ filters.dispatchArea == area.id ? 'selected' }}
                            >
                                {{ area.name }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">{{ 'label.state'|trans }}</label>
                    <select name="state" class="form-select">
                        <option value="">{{ 'label.all_states'|trans }}</option>
                        {% for state in states %}
                            <option
                                value="{{ state.id }}"
                                {{ filters.state == state.id ? 'selected' }}
                            >
                                {{ state.name }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-primary w-100">
                        {{ 'label.filters.apply'|trans }}
                    </button>

                    {% if activeFilterCount > 0 %}
                        <a
                            href="{{ path('app_data_allocation_list') }}"
                            class="btn btn-link w-100"
                        >
                            {{ 'label.filters.reset'|trans }}
                        </a>
                    {% endif %}
                </div>
            </form>
        </div>
    </div>
{% endblock %}
