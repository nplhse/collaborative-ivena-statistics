{% extends '_layout_vertical.html.twig' %}

{% block title %}{{ 'title.indication.list'|trans }} - {{ parent() }}{% endblock %}

{% block turbo_drive %}data-turbo=true{% endblock %}

{% block header %}
    {% embed '_embeds/header.html.twig' %}
        {% block header_after %}
            {{ include(('_includes/subnav_data.html.twig')) }}
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block page_header %}
    <div class="container-xl">
        <twig:Breadcrumbs
            :items="[
                    { label: 'link.data', path: path('app_data_index') },
                    { label: 'title.indication.list' }
                ]"
        />

        <div class="page-header d-print-none">
            <div class="row align-items-center">
                <div class="col">
                    {% block page_intro %}
                        <h2 class="page-title">
                            {% block page_title %}{{ 'title.indication.list'|trans }}{% endblock %}
                        </h2>
                        {% block page_subtitle %}
                            {% block result_count %}
                                <div id="result-count" class="text-body-secondary mt-1">
                                    {{ 'label.pagination_numbers'|trans({first: paginator.firstResultNumber, last: paginator.lastResultNumber, total: paginator.numResults}) }}
                                </div>
                            {% endblock %}
                        {% endblock %}
                    {% endblock %}
                    </div>
                <!-- Page title actions -->
                <div class="col-auto ms-auto d-print-none">
                    <div class="btn-list">
                        <form
                            method="GET"
                            action="{{ path('app_data_indication_list') }}"
                            data-controller="autosubmit"
                            data-turbo-frame="indication-list"
                        >
                            <div class="input-icon">
                                <input
                                    type="search"
                                    name="search"
                                    value="{{ app.request.query.get('search') }}"
                                    aria-label="{{ 'label.search'|trans }}"
                                    placeholder="{{ 'label.search'|trans }}"
                                    class="form-control d-inline-block w-9 me-3"
                                    data-action="autosubmit#debouncedSubmit"
                                    autofocus
                                >
                                <span class="input-icon-addon">
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="icon"
                                        width="24" height="24" viewBox="0 0 24 24"
                                        stroke-width="2" stroke="currentColor"
                                        fill="none"
                                        stroke-linecap="round" stroke-linejoin="round"
                                    >
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                        <circle cx="10" cy="10" r="7" />
                                        <line x1="21" y1="21" x2="15" y2="15" />
                                    </svg>
                                </span>
                            </div>

                            <input type="hidden" name="type" value="{{ type }}">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block page_content %}
    <turbo-frame id="indication-list" data-turbo-action="advance">
        {% if search is not empty %}
            <twig:Alert type="info" :message="'label.searching_for'|trans({term: search})" />
        {% endif %}

        <twig:DataTable
            :paginator="paginator"
            :paginationRoute="pagination_route"
            :tabs="tabs"
        >
            {% import '_macros/pagination.html.twig' as pagination %}

            <table class="table data-table-card">
                <thead>
                <tr>
                    <th class="col-1">
                        <a class="text-muted" href="{{ path('app_data_indication_list', {
                            ...app.request.query.all(),
                            sortBy: 'code',
                            orderBy: sortBy == 'code' and orderBy == 'asc' ? 'desc' : 'asc',
                        }) }}">
                            {{ 'label.indication.code'|trans }} {{ pagination.sortArrow('code', sortBy, orderBy) }}
                        </a>
                    </th>
                    {% if active_type == 'raw' %}
                        <th class="col-3">
                            <a class="text-muted" href="{{ path('app_data_indication_list', {
                                ...app.request.query.all(),
                                sortBy: 'name',
                                orderBy: sortBy == 'name' and orderBy == 'asc' ? 'desc' : 'asc',
                            }) }}">
                                {{ 'label.name'|trans }} {{ pagination.sortArrow('name', sortBy, orderBy) }}
                            </a>
                        </th>
                        <th class="col-4">
                            <a class="text-muted">
                                {{ 'label.normalized'|trans }}
                            </a>
                        </th>
                    {% else %}
                        <th class="col-7">
                            <a class="text-muted" href="{{ path('app_data_indication_list', {
                                ...app.request.query.all(),
                                sortBy: 'name',
                                orderBy: sortBy == 'name' and orderBy == 'asc' ? 'desc' : 'asc',
                            }) }}">
                                {{ 'label.name'|trans }} {{ pagination.sortArrow('name', sortBy, orderBy) }}
                            </a>
                        </th>
                    {% endif %}
                    <th class="col-2">
                        <a class="text-muted" href="{{ path('app_data_indication_list', {
                            ...app.request.query.all(),
                            sortBy: 'lastChange',
                            orderBy: sortBy == 'lastChange' and orderBy == 'asc' ? 'desc' : 'asc',
                        }) }}">
                            {{ 'label.last_changed_at'|trans }} {{ pagination.sortArrow('lastChange', sortBy, orderBy) }}
                        </a>
                    </th>
                    <th class="col-2">
                        {{ 'label.last_changed_by'|trans }}
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for indication in paginator.results %}
                    <tr>
                        <td>
                            <span class="badge">{{ indication.code }}</span>
                        </td>
                        {% if active_type == 'raw' %}
                            <td>
                                <a href="{{ path('app_data_indication_raw_assign', {id: indication.id}) }}" target="_top">
                                    {{ indication.name }}
                                </a>
                            </td>
                            <td>
                                {% if indication.target is not null %}
                                    {{ indication.target.name }} ({{ indication.target.code }})
                                {% else %}
                                    <span class="badge">null</span>
                                {% endif %}
                            </td>
                        {% else %}
                            <td>
                                {{ indication.name }}
                            </td>
                        {% endif %}
                        <td>
                            {{ indication.updatedAt ? indication.updatedAt|date('d.m.Y H:i') : indication.createdAt|date('d.m.Y H:i') }}
                        </td>
                        <td>
                            {{ indication.updatedBy ? indication.updatedBy : indication.createdBy }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">
                            <div class="empty">
                                <div class="empty-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                        <circle cx="12" cy="12" r="9" />
                                        <line x1="9" y1="10" x2="9.01" y2="10" />
                                        <line x1="15" y1="10" x2="15.01" y2="10" />
                                        <path d="M9.5 15.25a3.5 3.5 0 0 1 5 0" />
                                    </svg>
                                </div>
                                <p class="empty-title">{{ 'label.search_no_results'|trans }}</p>
                                <p class="empty-subtitle text-secondary">
                                    {{ 'help.search_no_results'|trans }}
                                </p>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </twig:DataTable>

        <turbo-stream action="replace" target="result-count">
            <template>
                {{ block('result_count') }}
            </template>
        </turbo-stream>
    </turbo-frame>
{% endblock %}
