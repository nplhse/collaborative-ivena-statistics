{% extends '@Shared/_layout_vertical.html.twig' %}

{% block title %}{{ 'title.dispatch_area.list'|trans }} - {{ parent() }}{% endblock %}

{% block turbo_drive %}data-turbo=true{% endblock %}

{% block header %}
    {% embed '@Shared/_embeds/header.html.twig' %}
        {% block header_after %}
            {{ include(('@Shared/_includes/subnav_data.html.twig')) }}
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block page_header %}
    <div class="container-xl">
        <twig:Breadcrumbs
            :items="[
                    { label: 'link.data', path: path('app_data_index') },
                    { label: 'title.dispatch_area.list' }
                ]"
        />

        <div class="page-header d-print-none">
            <div class="row align-items-center">
                <div class="col">
                    {% block page_intro %}
                        <h2 class="page-title">
                            {% block page_title %}{{ 'title.dispatch_area.list'|trans }}{% endblock %}
                        </h2>
                        {% block page_subtitle %}
                            {% block result_count %}
                                <div id="result-count" class="text-body-secondary mt-1">
                                    {{ 'label.pagination_numbers'|trans({first: paginator.firstResultNumber, last: paginator.lastResultNumber, total: paginator.numResults}) }}
                                </div>
                            {% endblock %}
                        {% endblock %}
                    {% endblock %}
                    </div>
                <!-- Page title actions -->
                <div class="col-auto ms-auto d-print-none">
                    <div class="btn-list">
                        <div class="btn-group">
                            <button
                                class="btn"
                                type="button"
                                data-bs-toggle="offcanvas"
                                data-bs-target="#area-filters"
                                aria-controls="area-filters"
                            >
                                {% if activeFilterCount < 1 %}
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="icon"
                                        width="24"
                                        height="24"
                                        viewBox="0 0 24 24"
                                        stroke-width="2"
                                        stroke="currentColor"
                                        fill="none"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                    >
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                        <path d="M4 4h16l-6 8v6l-4 -2v-4z" />
                                    </svg>
                                {% else %}
                                    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24">
                                        <path fill="currentColor" d="M20 3H4a1 1 0 0 0-1 1v2.227l.008.223a3 3 0 0 0 .772 1.795L8 12.886V21a1 1 0 0 0 1.316.949l6-2l.108-.043A1 1 0 0 0 16 19v-6.586l4.121-4.12A3 3 0 0 0 21 6.171V4a1 1 0 0 0-1-1"/>
                                    </svg>
                                {% endif %}
                                <span class="ms-2">{{ 'label.filters'|trans }}</span>

                                {% if activeFilterCount > 0 %}
                                    <span class="badge text-primary ms-2">
                                        {{ activeFilterCount }}
                                    </span>
                                {% endif %}
                            </button>

                            {% if activeFilterCount > 0 %}
                                <a
                                    href="{{ path('app_data_dispatch_area_list') }}"
                                    class="btn btn-icon btn-outline"
                                    title="Filter zurücksetzen"
                                    aria-label="Filter zurücksetzen"
                                >
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="icon"
                                        width="24"
                                        height="24"
                                        viewBox="0 0 24 24"
                                        stroke-width="2"
                                        stroke="currentColor"
                                        fill="none"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                    >
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                        <path d="M18 6l-12 12" />
                                        <path d="M6 6l12 12" />
                                    </svg>
                                </a>
                            {% endif %}
                        </div>

                        <form
                            method="GET"
                            action="{{ path('app_data_dispatch_area_list') }}"
                            data-controller="autosubmit"
                            data-turbo-frame="area-list"
                        >
                            <div class="input-icon">
                                <input
                                    type="search"
                                    name="search"
                                    value="{{ app.request.query.get('search') }}"
                                    aria-label="{{ 'label.search'|trans }}"
                                    placeholder="{{ 'label.search'|trans }}"
                                    class="form-control d-inline-block w-9 me-3"
                                    data-action="autosubmit#debouncedSubmit"
                                    autofocus
                                >
                                <span class="input-icon-addon">
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="icon"
                                        width="24" height="24" viewBox="0 0 24 24"
                                        stroke-width="2" stroke="currentColor"
                                        fill="none"
                                        stroke-linecap="round" stroke-linejoin="round"
                                    >
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                        <circle cx="10" cy="10" r="7" />
                                        <line x1="21" y1="21" x2="15" y2="15" />
                                    </svg>
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block page_content %}
    <turbo-frame id="area-list" data-turbo-action="advance">
        {% import '@Shared/_macros/filters.html.twig' as activeFilters %}

        {% if activeFilterCount > 0 %}
            <div class="alert alert-info" role="alert">
                <strong class="text-info">{{ 'label.filters.active'|trans }}:</strong>
                {{ activeFilters.area_filter_badges(filters, states) }}
            </div>
        {% endif %}

        <twig:DataTable
            :paginator="paginator"
            :paginationRoute="pagination_route"
        >
            {% import '@Shared/_macros/pagination.html.twig' as pagination %}

            <table class="table data-table-card">
                <thead>
                    <tr>
                        <th class="col-4">
                            <a class="text-muted" href="{{ path('app_data_dispatch_area_list', {
                                ...app.request.query.all(),
                                sortBy: 'name',
                                orderBy: sortBy == 'name' and orderBy == 'asc' ? 'desc' : 'asc',
                            }) }}">
                                {{ 'label.name'|trans }} {{ pagination.sortArrow('name', sortBy, orderBy) }}
                            </a>
                        </th>
                        <th class="col-2">
                            <a class="text-muted" href="{{ path('app_data_dispatch_area_list', {
                                ...app.request.query.all(),
                                sortBy: 'state',
                                orderBy: sortBy == 'state' and orderBy == 'asc' ? 'desc' : 'asc',
                            }) }}">
                                {{ 'label.state'|trans }} {{ pagination.sortArrow('state', sortBy, orderBy) }}
                            </a>
                        </th>
                        <th class="col-2">
                            <a class="text-muted" href="{{ path('app_data_dispatch_area_list', {
                                ...app.request.query.all(),
                                sortBy: 'lastChange',
                                orderBy: sortBy == 'lastChange' and orderBy == 'asc' ? 'desc' : 'asc',
                            }) }}">
                                {{ 'label.last_changed_at'|trans }} {{ pagination.sortArrow('lastChange', sortBy, orderBy) }}
                            </a>
                        </th>
                        <th class="col-2">
                            {{ 'label.last_changed_by'|trans }}
                        </th>
                    </tr>
                </thead>
                <tbody>
                {% for dispatch_area in paginator.results %}
                    <tr>
                        <td>
                            {{ dispatch_area.name }}
                        </td>
                        <td>
                            {{ dispatch_area.state }}
                        </td>
                        <td>
                            {{ dispatch_area.updatedAt ? dispatch_area.updatedAt|date('d.m.Y H:i') : dispatch_area.createdAt|date('d.m.Y H:i') }}
                        </td>
                        <td>
                            {{ dispatch_area.updatedBy ? dispatch_area.updatedBy : dispatch_area.createdBy }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">
                            <div class="empty">
                                <div class="empty-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                        <circle cx="12" cy="12" r="9" />
                                        <line x1="9" y1="10" x2="9.01" y2="10" />
                                        <line x1="15" y1="10" x2="15.01" y2="10" />
                                        <path d="M9.5 15.25a3.5 3.5 0 0 1 5 0" />
                                    </svg>
                                </div>
                                <p class="empty-title">{{ 'label.search_no_results'|trans }}</p>
                                <p class="empty-subtitle text-secondary">
                                    {{ 'help.search_no_results'|trans }}
                                </p>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </twig:DataTable>

        <turbo-stream action="replace" target="result-count">
            <template>
                {{ block('result_count') }}
            </template>
        </turbo-stream>
    </turbo-frame>

    <div
        class="offcanvas offcanvas-end"
        tabindex="-1"
        id="area-filters"
        aria-labelledby="area-filters-label"
    >
        <div class="offcanvas-header">
            <h2 class="offcanvas-title" id="area-filters-label">
                {{ 'label.filter.results'|trans }}
            </h2>
            <button
                type="button"
                class="btn-close"
                data-bs-dismiss="offcanvas"
                aria-label="Close"
            ></button>
        </div>

        <div class="offcanvas-body">
            <form method="get" action="{{ path('app_data_dispatch_area_list') }}">
                <div class="mb-3">
                <div class="mb-3">
                    <label class="form-label">{{ 'label.state'|trans }}</label>
                    <select name="state" class="form-select">
                        <option value="">{{ 'label.all_states'|trans }}</option>
                        {% for state in states %}
                            <option
                                value="{{ state.id }}"
                                {{ filters.state == state.id ? 'selected' }}
                            >
                                {{ state.name }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">{{ 'label.search'|trans }}</label>
                    <input
                        type="search"
                        name="search"
                        class="form-control"
                        value="{{ filters.search }}"
                        placeholder="{{ 'label.search_for'|trans }}"
                    >
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-primary w-100">
                        {{ 'label.filters.apply'|trans }}
                    </button>

                    {% if activeFilterCount > 0 %}
                        <a
                            href="{{ path('app_data_dispatch_area_list') }}"
                            class="btn btn-link w-100"
                        >
                            {{ 'label.filters.reset'|trans }}
                        </a>
                    {% endif %}
                </div>
            </form>
        </div>
    </div>
{% endblock %}
