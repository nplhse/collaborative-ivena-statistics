<?xml version="1.0"?>
<psalm
    errorLevel="3"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="src"/>
        <ignoreFiles>
            <directory name="vendor"/>
        </ignoreFiles>
    </projectFiles>
    <fileExtensions>
        <extension name=".php"/>
        <extension name=".twig" checker="/vendor/psalm/plugin-symfony/src/Twig/TemplateFileAnalyzer.php"/>
    </fileExtensions>
    <plugins>
        <pluginClass class="Psalm\SymfonyPsalmPlugin\Plugin"/>
        <pluginClass class="Weirdan\DoctrinePsalmPlugin\Plugin"/>
        <pluginClass class="Psalm\PhpUnitPlugin\Plugin"/>
        <pluginClass class="Psalm\MockeryPlugin\Plugin"/>
    <pluginClass class="Zenstruck\Foundry\Psalm\FoundryPlugin"/></plugins>
    <issueHandlers>
        <ClassMustBeFinal>
            <errorLevel type="suppress">
                <directory name="src/Entity"/>
                <directory name="src/*/Domain/Entity"/>
            </errorLevel>
        </ClassMustBeFinal>
        <PossiblyUnusedMethod>
            <errorLevel type="suppress">
                <file name="src/Shared/Infrastructure/Pagination/Paginator.php" />
                <directory name="src/*/Application/Contracts/" />
                <directory name="src/*/Application/Exception/" />
                <directory name="src/*/Domain/Entity/" />
                <directory name="src/*/Domain/Enum/" />
                <directory name="src/*/UI/Console/Command/" />
                <directory name="src/*/UI/Http/Controller" />
                <directory name="src/Command"/>
                <directory name="src/DataFixtures"/>
                <directory name="src/DataTransferObjects"/>
                <directory name="src/Enum"/>
                <directory name="src/Entity"/>
                <directory name="src/Factory"/>
                <directory name="src/Form"/>
                <directory name="src/Faker/Provider"/>
                <directory name="src/Import/Infrastructure/Adapter/" />
                <directory name="src/Import/Infrastructure/Indication/" />
                <directory name="src/Import/Infrastructure/Mapping/" />
                <directory name="src/Import/Infrastructure/Resolver/" />
                <directory name="src/Query" />
                <directory name="src/Repository" />
                <directory name="src/Service/Seed/Areas/" />
            </errorLevel>
        </PossiblyUnusedMethod>
        <PossiblyUnusedProperty>
            <errorLevel type="suppress">
                <directory name="src/*/Application/DTO/" />
                <directory name="src/DataTransferObjects" />
                <directory name="src/Import/Infrastructure/Adapter/" />
            </errorLevel>
        </PossiblyUnusedProperty>
        <UnusedClass>
            <errorLevel type="suppress">
                <directory name="src/*/Application/MessageHandler/" />
                <directory name="src/*/UI/Twig/Components" />
                <directory name="src/*/UI/Http/Controller" />
                <directory name="src/*/UI/Console/Command" />
                <directory name="src/Command" />
                <directory name="src/Controller" />
                <directory name="src/DataFixtures" />
                <directory name="src/EventSubscriber" />
                <directory name="src/Import/Infrastructure/Adapter/" />
                <directory name="src/Import/Infrastructure/Mapping/" />
                <directory name="src/Import/Infrastructure/Resolver/" />
                <directory name="src/Import/Infrastructure/Repository/" />
                <directory name="src/MessageHandler"/>
                <directory name="src/Twig/Components/"/>
                <directory name="src/Service/Seed"/>
            </errorLevel>
        </UnusedClass>
        <UnusedParam>
            <errorLevel type="suppress">
                <directory name="src/DataTransferObjects" />
                <directory name="src/EventSubscriber" />
                <directory name="src/Repository" />
                <directory name="src/Import/Infrastructure/Adapter/" />
                <directory name="src/Import/Infrastructure/Repository/" />
            </errorLevel>
        </UnusedParam>
        <UnusedProperty>
            <errorLevel type="suppress">
                <directory name="src/Import/Infrastructure/Adapter/" />
            </errorLevel>
        </UnusedProperty>
    </issueHandlers>
</psalm>
